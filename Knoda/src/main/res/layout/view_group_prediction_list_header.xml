<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/group_prediction_list_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/group_prediction_list_leader_textview"
            style="@style/darkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="adam1"
            android:textSize="20sp" />

        <TextView
            style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_prediction_list_leader_textview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:text="current 7 Day leader" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_rankings_container"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/group_settings_container">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-1dp"
            android:layout_toLeftOf="@+id/group_rankings_icon"
            android:background="@color/lightGray" />

        <ImageView
            android:id="@+id/group_rankings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:src="@drawable/rankings_icon" />

        <TextView
            style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_rankings_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:text="Rankings" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_settings_container"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/group_settings_icon"
            android:background="@color/lightGray" />

        <ImageView
            android:id="@+id/group_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/group_settings_icon" />

        <TextView
            style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_settings_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:text="Settings" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/group_prediction_list_info"
        android:layout_marginTop="3dp"
        android:background="@color/lightGray" />
</RelativeLayout>