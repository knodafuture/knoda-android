<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="views.avatar.UserAvatarChooserActivity"
    tools:ignore="MergeRootFrame">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/knodaLightGreenTransparent" />

    <ImageView
        android:id="@+id/photo_chooser_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/knodaLighterGreen"
        android:clickable="true"
        android:src="@drawable/camera_avatar" />

    <FrameLayout
        android:id="@+id/progress_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparentBlack"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/photo_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:indeterminate="true" />
    </FrameLayout>
</RelativeLayout>