<?xml version="1.0" encoding="utf-8"?>

<views.profile.FollowUserListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/follow_user_avatar_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/follow_user_avatar_imageview"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/black" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/avatar_mask" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/follow_user_username_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/follow_user_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="UserNameHere"
            android:textColor="@color/knodaDarkGreen"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/follow_user_verified_checkmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/verified_badge"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/follow_user_button"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/follow_btn"
            android:clickable="true" />

        <View
            android:id="@+id/follow_user_button_cover"
            style="@style/followButtonCover"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="#EFEFEF" />
</views.profile.FollowUserListCell>