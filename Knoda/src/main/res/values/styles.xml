<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_main">
        <item name="android:background">@drawable/button_main_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="edittext_main">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/knodaDarkGreen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">@color/knodaHintText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="knoda_edittext">
        <item name="android:textColor">@color/knodaDarkGreen</item>
        <item name="android:textColorHint">@color/knodaHintText</item>
    </style>

    <style name="smallWhiteText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallGreenText">
        <item name="android:textColor">@color/knodaLightGreen</item>
    </style>

    <style name="darkGreenText">
        <item name="android:textColor">@color/knodaDarkGreen</item>
    </style>

    <style name="smallDarkGreenText">
        <item name="android:textColor">@color/knodaDarkGreen</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="largeWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tabUnderline">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/knodaDarkGreen</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="tabText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/knodaLighterGreen</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="xButton">
        <item name="android:background">@drawable/close_btn</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="xButtonWhite">
        <item name="android:background">@drawable/invite_close</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="followButtonCover">
        <item name="android:background">#DEE7E1</item>
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

</resources>